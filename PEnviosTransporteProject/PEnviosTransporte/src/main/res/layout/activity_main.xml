<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="TRANSPORTES SEUR"
        android:textStyle="bold"
        android:textSize="20dp"/>


    <Spinner
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    </Spinner>


    <ImageView
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:src="@drawable/seur"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:layout_marginLeft="200dp"
        android:id="@+id/radioGroupTarifa"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonNormal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="TARIFA NORMAL"/>
        <RadioButton
            android:id="@+id/radioButtonUrgente"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="TARIFA URGENTE"/>

        </RadioGroup>


        <CheckBox
            android:layout_marginTop="30dp"
            android:id="@+id/checkBoxRegalo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Caja Regalo"/>

        <CheckBox
            android:id="@+id/checkBoxTarjeta"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Con tarjeta dedicada"/>


        <EditText
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textoPeso"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Introduce el peso del paquete"/>

        <Button
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:id="@+id/botonConsulta"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="HACER CALCULOS"/>

 </LinearLayout>
